<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="cinema">
        <addColumn tableName="TICKET">
            <column name="SESSION_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="cinema">
        <addForeignKeyConstraint baseColumnNames="SESSION_ID" baseTableName="TICKET"
                                 constraintName="FK_TICKET_ON_SESSION" referencedColumnNames="ID"
                                 referencedTableName="SESSION_"/>
    </changeSet>
    <changeSet id="3" author="cinema">
        <dropNotNullConstraint columnDataType="uuid" columnName="CLIENT_ID" tableName="TICKET"/>
    </changeSet>
</databaseChangeLog>